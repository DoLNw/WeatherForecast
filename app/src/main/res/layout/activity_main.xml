<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg">

    <RelativeLayout
        android:id="@+id/title"
        android:background="#ffcd2626"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city"/>

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#A71717"/>

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="温州天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp"/>

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity = "center"
            android:src="@drawable/title_update"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@+id/title_update_btn"
            android:src="@drawable/title_share" />

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>
    </RelativeLayout>

    <!--今日天气信息-->
    <RelativeLayout
        android:id="@+id/weather_today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10.0dip">

        <!--城市名称-->
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="温州"
            android:textColor="@android:color/white"
            android:textSize="40.0sp"/>

        <!--发布时间-->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/city"
            android:layout_marginLeft="15.0dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="今天18：25发布"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>

        <!--湿度信息-->
        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/time"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:text="湿度：57%"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>

        <!--PM2.5整体信息-->
        <LinearLayout
            android:id="@+id/pm2_5_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!--详情-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6.0dp"
                android:paddingLeft="12.0dp"
                android:paddingRight="12.0dp"
                android:paddingTop="6.0dp"
                android:orientation="horizontal">

                <!--文字详情-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--纯文字-->
                    <TextView
                        android:id="@+id/pm2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM2.5"
                        android:textSize="12.0sp"
                        android:textColor="@android:color/white"/>

                    <!--数值-->
                    <TextView
                        android:id="@+id/pm_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textSize="30.0sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <!--图片-->
                <ImageView
                    android:id="@+id/pm2_5_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/biz_plugin_weather_0_50"
                    android:layout_marginLeft="5.0dp"/>

            </LinearLayout>

            <!--污染等级-->
            <TextView
                android:id="@+id/pm2_5_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="良好"
                android:textSize="20.0sp"
                android:gravity="center"/>

        </LinearLayout>

        <!--今日天气信息块-->
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_below="@id/humidity"
            android:layout_centerInParent="true"
            android:layout_marginTop="5.0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--天气情况图片-->
            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/biz_plugin_weather_qing"/>

            <!--今天星期几-->
            <TextView
                android:id="@+id/week_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/weather_img"
                android:text="今天星期三"
                android:textColor="@android:color/white"
                android:textSize="20.sp"/>

            <!--温度范围-->
            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/weather_img"
                android:layout_below="@id/week_today"
                android:text="5˚C~10˚C"
                android:textColor="@android:color/white"
                android:textSize="30.0sp"/>

            <!--天气状况-->
            <TextView
                android:id="@+id/climate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temperature"
                android:layout_toRightOf="@id/weather_img"
                android:layout_marginLeft="5dp"
                android:text="多云转晴"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <!--风力信息-->
            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/climate"
                android:layout_toRightOf="@id/weather_img"
                android:layout_marginLeft="5dp"
                android:text="微风"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>